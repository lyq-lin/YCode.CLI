@{
    ViewData["Title"] = "联系我们 - YCode Blog";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-4">联系我们</h1>
                <p class="lead text-muted">有任何问题或建议？我们很乐意听到您的声音</p>
            </div>

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100 text-center">
                        <div class="card-body p-4">
                            <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fas fa-envelope fa-2x text-white"></i>
                            </div>
                            <h5>邮箱联系</h5>
                            <p class="text-muted">发送邮件到我们的官方邮箱</p>
                            <a href="mailto:contact@ycodeblog.com" class="btn btn-outline-primary">发送邮件</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100 text-center">
                        <div class="card-body p-4">
                            <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fab fa-github fa-2x text-white"></i>
                            </div>
                            <h5>GitHub</h5>
                            <p class="text-muted">在GitHub上关注我们的项目</p>
                            <a href="https://github.com/ycodeblog" class="btn btn-outline-success">访问GitHub</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card border-0 shadow-sm h-100 text-center">
                        <div class="card-body p-4">
                            <div class="bg-info rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fab fa-twitter fa-2x text-white"></i>
                            </div>
                            <h5>社交媒体</h5>
                            <p class="text-muted">在社交媒体上关注我们</p>
                            <a href="https://twitter.com/ycodeblog" class="btn btn-outline-info">关注我们</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body p-5">
                    <h4 class="mb-4">发送消息</h4>
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label">姓名</label>
                                <input type="text" class="form-control" id="name" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">邮箱</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">主题</label>
                            <input type="text" class="form-control" id="subject" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">消息内容</label>
                            <textarea class="form-control" id="message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>发送消息
                        </button>
                    </form>
                </div>
            </div>

            <div class="mt-5 text-center">
                <h5 class="mb-3">常见问题</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <h6>如何投稿？</h6>
                                <p class="small text-muted mb-0">发送邮件到投稿邮箱，我们会及时回复。</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card border-0 bg-light">
                            <div class="card-body">
                                <h6>响应时间？</h6>
                                <p class="small text-muted mb-0">我们会在24小时内回复您的消息。</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // 这里可以添加表单提交逻辑
            alert('感谢您的消息！我们会尽快回复。');
            this.reset();
        });
    </script>
}