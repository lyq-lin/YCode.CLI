@model IEnumerable<YCode.BLog.Models.BlogPost>

@{
    ViewData["Title"] = "首页 - YCode Blog";
}

<div class="blog-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 mb-4">欢迎来到 YCode Blog</h1>
                <p class="lead">分享技术，记录成长，探索编程的无限可能</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            @if (!string.IsNullOrEmpty(ViewBag.Search))
            {
                <div class="alert alert-info mb-4">
                    搜索 "@ViewBag.Search" 的结果
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.Category))
            {
                <div class="alert alert-primary mb-4">
                    分类: @ViewBag.Category
                </div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.Tag))
            {
                <div class="alert alert-success mb-4">
                    标签: @ViewBag.Tag
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h3 class="text-muted">没有找到相关文章</h3>
                    <p class="text-muted">请尝试其他搜索条件或浏览所有文章</p>
                    <a href="/" class="btn btn-primary mt-3">查看所有文章</a>
                </div>
            }
            else
            {
                foreach (var post in Model)
                {
                    <div class="card post-card mb-4">
                        <div class="card-body">
                            <h2 class="card-title">
                                <a href="/Home/Post/@post.Id" class="text-decoration-none text-dark">
                                    @post.Title
                                </a>
                            </h2>
                            <div class="post-meta mb-3">
                                <i class="fas fa-user me-1"></i>@post.Author
                                <i class="fas fa-calendar ms-3 me-1"></i>@post.CreatedAt.ToString("yyyy-MM-dd")
                                <i class="fas fa-eye ms-3 me-1"></i>@post.ViewCount 阅读
                                @if (!string.IsNullOrEmpty(post.Category))
                                {
                                    <span class="badge bg-primary ms-3">@post.Category</span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(post.Summary))
                            {
                                <p class="card-text">@post.Summary</p>
                            }
                            else
                            {
                                <p class="card-text">@(post.Content.Length > 200 ? post.Content.Substring(0, 200) + "..." : post.Content)</p>
                            }
                            <div class="mt-3">
                                @foreach (var tag in post.Tags.Take(5))
                                {
                                    <a href="/?tag=@tag" class="badge bg-secondary tag-badge text-decoration-none">
                                        <i class="fas fa-tag me-1"></i>@tag
                                    </a>
                                }
                            </div>
                            <a href="/Home/Post/@post.Id" class="btn btn-outline-primary mt-3">阅读全文</a>
                        </div>
                    </div>
                }

                <!-- 分页 -->
                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="/?page=@i&category=@ViewBag.Category&tag=@ViewBag.Tag&search=@ViewBag.Search">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>

        <div class="col-lg-4">
            <!-- 分类 -->
            <div class="sidebar-widget">
                <h5><i class="fas fa-folder me-2"></i>分类</h5>
                <ul class="list-unstyled">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <li>
                            <a href="/?category=@category" class="text-decoration-none">
                                <i class="fas fa-angle-right me-2"></i>@category
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- 标签云 -->
            <div class="sidebar-widget">
                <h5><i class="fas fa-tags me-2"></i>标签云</h5>
                <div>
                    @foreach (var tag in ViewBag.Tags)
                    {
                        <a href="/?tag=@tag" class="badge bg-light text-dark tag-badge text-decoration-none">
                            @tag
                        </a>
                    }
                </div>
            </div>

            <!-- 热门文章 -->
            <div class="sidebar-widget">
                <h5><i class="fas fa-fire me-2"></i>热门文章</h5>
                <div class="list-group list-group-flush">
                    @foreach (var post in Model.OrderByDescending(p => p.ViewCount).Take(5))
                    {
                        <a href="/Home/Post/@post.Id" class="list-group-item list-group-item-action border-0 px-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">@post.Title</h6>
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-eye me-1"></i>@post.ViewCount 阅读
                            </small>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>