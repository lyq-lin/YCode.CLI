@{
    ViewData["Title"] = "关于 - YCode Blog";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-4">关于我们</h1>
                <p class="lead text-muted">分享技术，记录成长，探索编程的无限可能</p>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="row align-items-center mb-4">
                        <div class="col-md-4 text-center">
                            <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                                <i class="fas fa-code fa-3x text-white"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h3 class="fw-bold">YCode Blog</h3>
                            <p class="text-muted">专注于技术分享和个人成长的博客平台</p>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-rocket text-primary fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>我们的使命</h5>
                                    <p class="text-muted">通过技术分享帮助开发者成长，构建更好的技术社区。</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-users text-primary fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>社区驱动</h5>
                                    <p class="text-muted">我们相信知识共享的力量，鼓励社区成员互相学习和帮助。</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-lightbulb text-primary fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>持续创新</h5>
                                    <p class="text-muted">紧跟技术发展趋势，分享最新的技术实践和解决方案。</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-heart text-primary fa-2x"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5>开源精神</h5>
                                    <p class="text-muted">秉承开源精神，所有代码和内容都向社区开放。</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5">
                        <h4 class="mb-3">技术栈</h4>
                        <div class="row">
                            <div class="col-md-3 col-6 text-center mb-3">
                                <div class="p-3 border rounded">
                                    <i class="fab fa-microsoft fa-2x text-primary mb-2"></i>
                                    <h6>ASP.NET Core</h6>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 text-center mb-3">
                                <div class="p-3 border rounded">
                                    <i class="fas fa-database fa-2x text-success mb-2"></i>
                                    <h6>SQLite</h6>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 text-center mb-3">
                                <div class="p-3 border rounded">
                                    <i class="fab fa-bootstrap fa-2x text-purple mb-2"></i>
                                    <h6>Bootstrap 5</h6>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 text-center mb-3">
                                <div class="p-3 border rounded">
                                    <i class="fab fa-js-square fa-2x text-warning mb-2"></i>
                                    <h6>JavaScript</h6>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-5">
                        <a href="/Home/Contact" class="btn btn-primary btn-lg">
                            <i class="fas fa-envelope me-2"></i>联系我们
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>